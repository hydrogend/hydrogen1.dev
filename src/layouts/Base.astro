---
import Head from '@/components/Head.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import { ViewTransitions } from 'astro:transitions';

import "@/styles/global.css";

type Props = {
    title: string;
    description?: string;
    type: "website" | "article";
	noindex?: boolean;
};

const { title, description, type, noindex } = Astro.props;
---

<html lang="ja">
	<head>
		<Head title={title} description={description} type={type} noindex={noindex} />
		<ViewTransitions />
	</head>

	<body>
		<Header />
		<main class="mx-auto my-0 max-w-[1080px] px-12 py-4">
			<slot />
		</main>
		<Footer />
	</body>
</html>
