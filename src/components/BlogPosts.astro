---
import type { BlogPostMeta } from "@/content";
import FormattedDate from "@/components/FormattedDate.astro";

interface Props {
    posts: BlogPostMeta[];
}

const { posts } = Astro.props;
---

<h1>記事の一覧</h1>
<ul>
    {posts.map((post) => (
        <li class="px-4 py-1 border-black border-2 rounded-lg bg-gray-50">
            <p class="date m-0">
                <FormattedDate date={post.data.post} />
            </p>
            <a href={`/blog/${post.slug}/`} class="text-black">
                <h4 class="title">{post.data.title}</h4>
            </a>
            <div class="text-right">
                {post.data.tags.map((tag) => (
                    <a href={`/blog/tag/${tag}`} class="text-gray-50 hover:text-white hover:underline">
                        <span class="bg-black rounded p-1">{tag}</span>
                    </a>
                ))}
            </div>
        </li>
    ))}
</ul>